<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="androidx.appcompat.widget.AppCompatImageView" />
        <import type="android.text.TextUtils"/>

        <variable
            name="clickCardView"
            type="android.view.View.OnClickListener" />
        <variable
            name="itemHome"
            type="com.example.pharmainc.ui.dataBinding.ItemPatientData" />
    </data>

    <androidx.cardview.widget.CardView
        style="@style/CardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_patient"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@{itemHome.image}"
                style="@style/ShapeAppearanceOverlay"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
                tools:srcCompat="@tools:sample/avatars" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title_patient_text_view"
                style="@style/AppCompatTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{itemHome.title}"
                android:textSize="@dimen/text_size_24sp"
                app:layout_constraintBottom_toTopOf="@id/email_patient_text_view"
                app:layout_constraintEnd_toStartOf="@id/first_name_patient_text_view"
                app:layout_constraintStart_toEndOf="@id/image_patient"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/title_patient" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/first_name_patient_text_view"
                style="@style/AppCompatTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_24sp"
                android:text="@{itemHome.name}"
                app:layout_constraintBottom_toBottomOf="@id/title_patient_text_view"
                app:layout_constraintEnd_toStartOf="@id/last_name_patient_text_view"
                app:layout_constraintStart_toEndOf="@id/title_patient_text_view"
                app:layout_constraintTop_toTopOf="@id/title_patient_text_view"
                tools:text="@tools:sample/first_names" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/last_name_patient_text_view"
                style="@style/AppCompatTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{itemHome.lastName}"
                android:textSize="@dimen/text_size_24sp"
                app:layout_constraintBottom_toBottomOf="@id/title_patient_text_view"
                app:layout_constraintStart_toEndOf="@id/first_name_patient_text_view"
                app:layout_constraintTop_toTopOf="@id/title_patient_text_view"
                tools:text="@tools:sample/last_names" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/email_patient_text_view"
                style="@style/AppCompatTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:text="@{itemHome.email}"
                app:layout_constraintBottom_toTopOf="@id/gender_patient_text_view"
                app:layout_constraintStart_toEndOf="@id/image_patient"
                app:layout_constraintTop_toBottomOf="@id/title_patient_text_view"
                tools:text="@string/email_patient" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/gender_patient_text_view"
                style="@style/AppCompatTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{itemHome.gender}"
                app:layout_constraintStart_toEndOf="@id/image_patient"
                app:layout_constraintTop_toBottomOf="@id/email_patient_text_view"
                tools:text="@string/gender_patient_male" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/birthdate_patient_text_view"
                style="@style/AppCompatTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{itemHome.birthdate}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/email_patient_text_view"
                tools:text="@tools:sample/date/ddmmyy" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>